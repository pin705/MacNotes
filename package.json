{
  "name": "macnote",
  "version": "1.0.0",
  "private": true,
  "description": "A premium, Apple-inspired note-taking app with cloud sync",
  "author": {
    "name": "MacNotes Team",
    "email": "macnotes.team@gmail.com"
  },
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.macnotes.app",
    "productName": "MacNotes",
    "copyright": "Copyright Â© 2024 MacNotes",
    "directories": {
      "output": "dist-electron",
      "buildResources": "electron/resources"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/logo.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "public/logo.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "public/logo.png",
      "category": "Office",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@auth/mongodb-adapter": "^3.11.1",
    "@ducanh2912/next-pwa": "^10.2.9",
    "@tiptap/extension-highlight": "^3.17.1",
    "@tiptap/extension-placeholder": "^3.17.1",
    "@tiptap/extension-underline": "^3.17.1",
    "@tiptap/react": "^3.17.1",
    "@tiptap/starter-kit": "^3.17.1",
    "bcryptjs": "^3.0.3",
    "lucide-react": "^0.473.0",
    "mongoose": "^8.9.5",
    "next": "16.1.6",
    "next-auth": "^4.24.13",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "postcss": "^8",
    "tailwindcss": "^4.0.0",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}
